.message{data: {message: {id: message.id}}}
  .outline
    .members-name
      = message.user.name
    .time-tag
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .detail
    - if message.content.present?
      %p.detail__content
        = message.content
    = image_tag message.image.url, class: 'detail__image' if message.image.present?